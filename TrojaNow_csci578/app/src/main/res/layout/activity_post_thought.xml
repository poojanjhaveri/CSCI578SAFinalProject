<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.usc.poojan.activities.PostThoughtActivity"
    android:id="@+id/PostThoughtActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minLines="3"
        android:hint="@string/post_hint"
        android:minHeight="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_location"
        android:id="@+id/location"
        android:width="120dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/textsize_button"
        android:layout_alignTop="@+id/temperature"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_temperature"
        android:id="@+id/temperature"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="120dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/textsize_button" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_anonymous"
        android:id="@+id/anoymousSwitch"
        android:checked="false"
        android:paddingTop="10dp"
        android:height="50dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textsize_button"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:id="@+id/cancelbutton"
        android:width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/textsize_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_post"
        android:id="@+id/postthoughtbutton"
        android:width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/textsize_button" />
</RelativeLayout>
